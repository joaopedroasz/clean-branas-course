// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String      @id @default(uuid())
  description String
  price       Int
  weight      Int
  width       Int
  height      Int
  depth       Int
  order_items OrderItem[]

  @@map("items")
}

model Coupon {
  id         String    @id @default(uuid())
  code       String    @unique
  percentage Int
  expires_at DateTime?
  order      Order[]

  @@map("coupons")
}

model Order {
  id                String      @id @default(uuid())
  coupon            Coupon?     @relation(fields: [coupon_code], references: [code], onDelete: SetNull)
  coupon_code       String?
  coupon_percentage Int?
  code              String      @unique
  cpf               String
  issue_date        DateTime    @default(now())
  freight           Int?
  sequence          Int         @unique @default(autoincrement())
  total             Int
  order_items       OrderItem[]

  @@map("orders")
}

model OrderItem {
  id       String @id @default(uuid())
  order    Order  @relation(fields: [order_id], references: [id], onDelete: Cascade)
  order_id String
  item     Item   @relation(fields: [item_id], references: [id], onDelete: Cascade)
  item_id  String
  quantity Int
  price    Int

  @@map("order_items")
}
