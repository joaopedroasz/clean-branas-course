{
  "name": "clean-branas-course",
  "version": "1.0.0",
  "main": "./src/main.ts",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "build": "tsc --p ./tsconfig.build.json",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register",
    "dev:server": "yarn env:dev yarn dev ./src/main.ts",
    "test": "yarn run:migrate:test && yarn env:test vitest --no-threads && yarn db:down",
    "test:coverage": "yarn run:migrate:test && yarn env:test vitest --coverage --no-threads && yarn db:down",
    "test:push": "yarn run:migrate:test && yarn env:test vitest --coverage --run --no-threads",
    "test:unit": "vitest --config vite-unit.config.ts --run",
    "test:unit:watch": "vitest --config vite-unit.config.ts",
    "test:integration": "yarn run:migrate:test && yarn env:test vitest --config vite-integration.config.ts --run --no-threads",
    "test:integration:watch": "yarn run:migrate:test && yarn env:test vitest --config vite-integration.config.ts --no-threads",
    "test:related": "yarn run:migrate:test && yarn env:test vitest related --run --no-threads",
    "create:migrate:dev": "yarn env:dev prisma migrate dev --name",
    "run:migrate:test": "yarn env:test prisma migrate deploy",
    "prisma:studio:dev": "yarn env:dev prisma studio",
    "prisma:generate:dev": "yarn env:dev prisma generate",
    "db:dev:up": "docker-compose --env-file .env.development up -d development-database",
    "db:test:up": "docker-compose --env-file .env.test up -d test-database",
    "db:down": "docker-compose down",
    "env:test": "dotenv -e .env.test --",
    "env:dev": "dotenv -e .env.development --",
    "graphql:types:generate": "graphql-codegen"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.12",
    "@graphql-codegen/introspection": "^2.2.1",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.7",
    "@graphql-tools/schema": "^9.0.10",
    "@types/axios": "^0.14.0",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@vitest/coverage-c8": "^0.25.2",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "supertest": "^6.3.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "*",
    "vitest": "^0.25.2"
  },
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "@prisma/client": "4.6.1",
    "axios": "^1.1.3",
    "dotenv-cli": "^6.0.0",
    "graphql": "^16.6.0",
    "prisma": "^4.6.1"
  },
  "prisma": {
    "schema": "./src/infra/database/prisma/schema.prisma"
  }
}
