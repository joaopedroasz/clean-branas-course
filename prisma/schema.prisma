// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String @id @default(uuid())
  description String
  price       Int
  weight      Int
  width       Int
  height      Int
  depth       Int

  @@map("items")
}

model Coupon {
  id         String    @id @default(uuid())
  code       String
  percentage String
  discount   Int
  expires_at DateTime?

  @@map("coupons")
}
