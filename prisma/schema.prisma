// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String @id @default(uuid())
  description String
  price       Int
  weight      Int
  width       Int
  height      Int
  depth       Int

  @@map("items")
}

model Coupon {
  id         String    @id @default(uuid())
  code       String    @unique
  percentage String
  discount   Int
  expires_at DateTime?
  Order      Order[]

  @@map("coupons")
}

model Order {
  id          String   @id @default(uuid())
  coupon      Coupon?  @relation(fields: [coupon_code], references: [code])
  coupon_code String?
  code        String   @unique
  cpf         String   @unique
  issue_date  DateTime @default(now())
  freight     Int?
  sequence    Int      @default(autoincrement())
  total       Int

  @@map("orders")
}
