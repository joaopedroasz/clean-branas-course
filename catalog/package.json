{
  "name": "catalog",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install ./catalog/.husky",
    "build": "tsc --p ./tsconfig.build.json",
    "test": "vitest --no-threads",
    "test:coverage": "yarn test --coverage",
    "test:push": "vitest --coverage --run --no-threads",
    "test:unit": "vitest --config vite-unit.config.ts --run",
    "test:unit:watch": "vitest --config vite-unit.config.ts",
    "test:integration": "yarn run:migrate:test && yarn env:test vitest --config vite-integration.config.ts --run --no-threads",
    "test:integration:watch": "yarn run:migrate:test && yarn env:test vitest --config vite-integration.config.ts --no-threads",
    "test:related": "yarn run:migrate:test && yarn env:test vitest related --run --no-threads",
    "env:test": "dotenv -e .env.test --",
    "env:dev": "dotenv -e .env.development --",
    "db:dev:up": "docker-compose --env-file .env.development up -d development-database",
    "db:test:up": "docker-compose --env-file .env.test up -d test-database",
    "create:migrate:dev": "yarn env:dev prisma migrate dev --name",
    "run:migrate:test": "yarn env:test prisma migrate deploy",
    "run:migrate:dev": "yarn env:dev prisma migrate deploy",
    "db:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@vitest/coverage-c8": "^0.26.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prisma": "^4.8.0",
    "typescript": "*",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2"
  },
  "prisma": {
    "schema": "./src/infra/database/prisma/schema.prisma"
  }
}
